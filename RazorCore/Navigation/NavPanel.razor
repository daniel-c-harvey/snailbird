@typeparam TMode

<div class="nav-panel">
    <div class="nav-bar">
        <button type="button" 
                class="@backButtonClass" 
                @onclick="OnNavigateBack"
                disabled="@(!modeHistory.Any())">
            <i class="bi bi-arrow-left" />
        </button>
    </div>
    <div class="nav-body">
        @if (ChildContent is null)
        {
            <span>Loading...</span>
        }
        else
        {
            @ChildContent
        }
    </div>
</div>

