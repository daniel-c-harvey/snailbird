@using RazorCore.Navigation;
@using SnailbirdData.Models.Post;
@using SnailbirdAdmin.Models;
@using SnailbirdAdmin.Views;

@page "/posts"

<PageTitle>Posts</PageTitle>

<NavPanel TMode="PostManagerMode" GetContext="GetPostManager">
    <PostManager TPost="LiveJamPost" @ref="postManager" />
</NavPanel>

@code{
    private LiveJamPostManager postManager;
    private PostManager<LiveJamPost> PostManager => postManager;

    private PostManager<LiveJamPost> GetPostManager()
    {
        return postManager;
    }
}