@using RazorCore.Navigation;
@using SnailbirdData.Models.Post;
@using SnailbirdAdmin.Models;
@using SnailbirdAdmin.Views;

@page "/flex-posts"

<PageTitle>Posts</PageTitle>

<NavPanel TMode="PostManagerMode" GetContext="GetPostManager">
    <FlexPostManager @ref="postManager" />
</NavPanel>

@code {
    private FlexPostManager postManager = default!;

    private INavigable<PostManagerMode> GetPostManager()
    {
        return postManager.ViewModel;
    }
}