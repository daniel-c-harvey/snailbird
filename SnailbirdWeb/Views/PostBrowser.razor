@using SnailbirdWeb.Models;
@typeparam TPostModel where TPostModel : SnailbirdData.Models.Post.Post, new()

@if(model != null)
{   
    @if(CurrentMode == PostBrowserMode.Feed)
    {
        <PostFeed TModel="TPostModel" Posts="@model.FeedModel.Posts" OnSelect="ViewPost"/>
    }
    else if (CurrentMode == PostBrowserMode.ViewPost)
    {
        <div class="sb-postframe">
            <ViewPost TPostModel="TPostModel" Post="@model.SelectedPostModel.Post" />
        </div>
    }
}