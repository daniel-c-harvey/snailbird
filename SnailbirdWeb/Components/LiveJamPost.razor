<div class="post">
    <NavLink href="Studio/post=live-jam-2024-03-27">
        <h1 class="pink header">@Post.Title</h1>
    </NavLink>
    <h3 class="aqua date header">@Post.PostDate.ToShortDateString()</h3>
    <p>
        @Post.Preamble
    </p>
    <div class="centeredimage">
        <iframe class="youtubeframe"
                src="@Post.VideoURL"
                title="YouTube video player" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                allowfullscreen>
        </iframe>
    </div>
    <ul class="songdetails">
        @foreach(SnailbirdData.Models.LiveJamPostInstrument instrument in Post.Instruments)
        {
            <li>
                <span class="instrument">@instrument.Name:</span> @instrument.Description
            </li>
        }
</ul>
</div>
@code {
    [Parameter]
    public SnailbirdData.Models.LiveJamPost Post { get; set; } = default!;
}
