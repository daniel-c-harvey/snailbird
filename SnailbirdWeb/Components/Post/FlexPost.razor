<div class="post">
    <h1 class="pink header">@Post.Title</h1>
    <h3 class="aqua date header">@Post.PostDate.ToShortDateString()</h3>
    @foreach (SnailbirdData.Models.Post.PostElement element in Post.Elements)
    {
        <PostElement Element="@element" ></PostElement>
    }
</div>
@code {
    [Parameter]
    public SnailbirdData.Models.Post.FlexPost Post { get; set; } = default!;
}
