
@if (Posts == null)
{
    <span>Loading...</span>   
}
else
{    
    @foreach(SnailbirdData.Models.LiveJamPost post in Posts)
    {
        <LiveJamPost Post=@post OnSelect="OnSelectPost"/>
    }
}


@code {
    [Parameter]
    public IEnumerable<SnailbirdData.Models.LiveJamPost>? Posts { get; set; }

    [Parameter]
    public EventCallback<SnailbirdData.Models.LiveJamPost> OnSelect { get; set; }

    private async Task OnSelectPost(SnailbirdData.Models.LiveJamPost post)
    {
        if (OnSelect.HasDelegate)
        {
            await OnSelect.InvokeAsync(post);
        }
    }
}
