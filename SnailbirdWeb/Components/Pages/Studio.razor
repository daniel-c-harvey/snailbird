@using RazorCore.Navigation;
@using SnailbirdWeb.Models;

@page "/studio"

<PageTitle>Studio</PageTitle>

<NavPanel TMode="PostBrowserMode"
            GetContext="GetPostBrowser">
    <PostBrowser TPostModel="SnailbirdData.Models.Entities.StudioFeedFlexPost" @ref="@postBrowser" />
</NavPanel>

@code {
    private PostBrowser<SnailbirdData.Models.Entities.StudioFeedFlexPost>? postBrowser;

    private PostBrowser<SnailbirdData.Models.Entities.StudioFeedFlexPost> GetPostBrowser()
    {
        if (postBrowser == null) throw new Exception("Post Browser not yet initialized.");
        
        return postBrowser;
    }
}

