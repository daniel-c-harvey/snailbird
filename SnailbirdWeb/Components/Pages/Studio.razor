@using RazorCore.Navigation;
@using SnailbirdWeb.Models;

@page "/studio"

<PageTitle>Studio</PageTitle>

<NavPanel TMode="PostBrowserMode"
            GetContext="GetPostBrowser">
    <PostBrowser TPostModel="SnailbirdData.Models.Post.FlexPost" @ref="@postBrowser"/>
</NavPanel>

@code{
    private PostBrowser<SnailbirdData.Models.Post.FlexPost>? postBrowser;

    private PostBrowser<SnailbirdData.Models.Post.FlexPost> GetPostBrowser()
    {
        if (postBrowser == null) throw new Exception("Post Browser not yet initialized.");
        
        return postBrowser;
    }
}

